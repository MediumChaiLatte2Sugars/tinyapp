<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <% if (user && currentPage === "/urls") {%>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% } %>
      </div>
    </div>
    <% if (!user) {%>
      <!--Registration and Login buttons if no user logged in-->
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item nav-link" href="/login">Login</a>
      </div>
    <% } else{ %>
      <!--Display current logged in user with option to logout-->
      <form class="form-inline" method="POST" action="/logout">
        <div class="form-group">
          <label for="logout" class="font-weight-bold mr-2">Logged in as: <%= user.email %>!</label>
          <button name="logout" type="submit" class="btn btn-outline-dark">Logout</button>
        </div>
      </form>
    <% } %>
  </nav>
</header>